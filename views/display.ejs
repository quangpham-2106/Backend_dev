<!-- views/display.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Management - User Details</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>User Details</h1>
    <div class="user-details-container">
      <div class="user-avatar"></div>
      <div class="user-info">
        <h2><%= user.name %></h2>
        <p>Email: <%= user.email %></p>
      </div>
    </div>
    <div class="user-actions">
      <a href="/users/edit/<%= user._id %>" class="edit-link">Edit</a>
      <a href="/users/delete/<%= user._id %>" class="delete-link">Delete</a>
    </div>
    <a href="/users" class="back-link">Back to User List</a>
  </div>
</body>
</html>